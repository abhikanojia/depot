<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %>
      <span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render(@cart) %>
            <% end %>
          <% end %>
        </div>
        <ul>
          <li><%= link_to "Home", store_index_url %></li>
          <li><a href="http://www..../faq">Questions</a></li>
          <li><a href="http://www..../news">News</a></li>
          <li><a href="http://www..../contact">Contact</a></li>
          <li><a>Time: <%= Time.now.strftime("%I:%M%p") %></a></li>
        </ul>
        <% if current_user %>
          <ul>
            <li><%= link_to "Orders", orders_url %></li>
            <li><%= link_to "Products", products_url %></li>
            <li><%= link_to "Users", users_url %></li>
            <li><%= link_to "Edit Profile", edit_user_url(current_user) %></li>
          </ul>
          <%= button_to "Logout", logout_url, method: :delete %>
        <% else %>
          <%= button_to "Login", login_url, method: :get %>
        <% end %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
