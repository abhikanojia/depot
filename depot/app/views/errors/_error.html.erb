 <% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%=raw t('errors.error.header', count: @order.errors.count,
        model: t('activerecord.models.order')) %>.</h2>
    <p><%= t('errors.error.body') %></p>
    <ul>
    <% @order.errors.full_messages.each do |message| %>
      <li><%=raw message %></li>
    <% end %>
    </ul>
  </div>
<% end %>