<h2>Categories</h2>
<ul>
  <% @categories.each do |category| %>
    <li><%= category.name %></li>
    <% if category.sub_categories.present? %>
      <ul>
        <% category.sub_categories.each do |subcategory| %>
          <li><%= subcategory.name %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</ul>
