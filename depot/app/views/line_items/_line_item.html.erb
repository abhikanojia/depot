<% if line_item == @current_item %>
  <tr id="<%= line_item.id %>" class="current_item">
<% else %>
  <tr id="<%= line_item.id %>">
<% end %>
<td><%= line_item.quantity %>&times;</td>
<td><%= line_item.product.title %></td>
<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
<td><%= button_to t('.remove'), line_item, method: :delete, data: { confirm: 'Are you sure' }, remote: true %></td>
</tr>